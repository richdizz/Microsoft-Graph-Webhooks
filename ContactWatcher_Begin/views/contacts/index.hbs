<h2>My Contacts</h2>
<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each contacts}}
            <tr>
                <td>{{givenName}}</td>
                <td>{{surname}}</td>
                <td>{{emailAddresses.[0].address}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>